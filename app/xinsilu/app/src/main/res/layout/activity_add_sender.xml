<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryContent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    tools:context="com.wrt.xinsilu.ui.activity.AddSenderActivity">
    <include layout="@layout/title"/>

    <TextView
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="0.8"
        android:textSize="@dimen/mid_text_size"
        android:text="发货人信息"
        android:gravity="center|left"
        />

    <LinearLayout
        android:background="@android:color/white"
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="1">
        <TextView
            style="@style/BasicParamNoMargin_h"
            android:layout_weight="1"
            android:gravity="center|left"
            android:textSize="@dimen/mid_text_size"
            android:text="发货人:"
            />
        <EditText
            style="@style/BasicParamNoMargin_h"
            android:layout_weight="3"
            android:textSize="@dimen/mid_text_size"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/BasicParamNoMargin_v"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:layout_weight="1">
        <TextView
            style="@style/BasicParamNoMargin_h"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textSize="@dimen/mid_text_size"
            android:text="手机号:"
            />
        <EditText
            style="@style/BasicParamNoMargin_h"
            android:textSize="@dimen/mid_text_size"
            android:layout_weight="3"
            android:background="@null"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiadan_tianjiashoujihao"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/add_address"
            style="@style/BasicParamNoMargin_v"
            android:gravity="center|left"
            android:background="@android:color/white"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:textSize="@dimen/mid_text_size"
            android:drawableRight="@mipmap/prolife_arrow"
            android:text="地址:"
            />
    <LinearLayout
        style="@style/BasicParamNoMargin_v"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:layout_weight="1">
        <TextView
            style="@style/BasicParamNoMargin_h"
            android:gravity="center|left"
            android:layout_weight="1"
            android:textSize="@dimen/small_text_size"
            android:text="详细地址:"
            />
        <EditText
            android:id="@+id/add_address_detail"
            style="@style/BasicParamNoMargin_h"
            android:layout_weight="3"
            android:background="@null"
            android:hint="详细街道等"
            android:gravity="center|left"
            android:textColorHint="#aaaaaa"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="4">
        <View
            style="@style/BasicParamNoMargin_h"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/add_commit"
            style="@style/BasicParamNoMargin_h"
            android:background="@drawable/background_shap_stroke_textview"
            android:textSize="@dimen/common_text_size"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center|bottom"
            android:text="保存"/>
        <View
            style="@style/BasicParamNoMargin_h"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>


    <LinearLayout
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="1"/>

</LinearLayout>
