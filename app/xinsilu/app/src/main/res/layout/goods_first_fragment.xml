<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commit_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/hor_style"
            android:orientation="vertical">

            <TextView
                style="@style/hor_style_padding"
                android:gravity="center|left"
                android:text="@string/send_info"
                android:textSize="@dimen/mid_text_size" />

            <LinearLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/t1"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="wrap_content"
                    android:text="发  货  人:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入发货人姓名"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <TextView
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/name_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:drawableTop="@mipmap/xiadan_tianjiashouhuoren"
                    android:text="常用发货人"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t2"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="wrap_content"
                    android:text="手  机  号:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入发货人手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <ImageView
                    android:id="@+id/number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:src="@mipmap/xiadan_tianjiashoujihao" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sender_address_layout"
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t3"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="wrap_content"
                    android:text="地        址:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <TextView
                    android:id="@+id/sender_address"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="请选择发货人地址"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <ImageView
                    android:id="@+id/arrow"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xiadan_arrow" />

            </LinearLayout>

            <LinearLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t4"
                    style="@style/myStyle"
                    android:layout_centerVertical="true"
                    android:text="@string/address_detail"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/address_detail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="@string/addressSoOn"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />
            </LinearLayout>

            <TextView
                style="@style/hor_style_padding"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="@string/receiverInfo"
                android:textSize="@dimen/mid_text_size" />

            <LinearLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:gravity="center_vertical"
                android:paddingTop="0dp">

                <TextView
                    android:id="@+id/t5"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="wrap_content"
                    android:text="收  货  人:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/reveive_name"
                    style="@style/BasicParamNoMargin_h"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入收货人姓名"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <TextView
                    android:id="@+id/line2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background" />

                <TextView
                    android:id="@+id/receive_name_button"
                    style="@style/myStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:drawableTop="@mipmap/xiadan_tianjiashouhuoren"
                    android:gravity="center"
                    android:text="常用收货人"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <LinearLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t6"
                    style="@style/myStyle"
                    android:layout_centerVertical="true"
                    android:text="手  机  号:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/receive_phone_number"
                    style="@style/myStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入收货人手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <ImageView
                    android:id="@+id/receive_number_button"
                    style="@style/myStyle"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:src="@mipmap/xiadan_tianjiashoujihao" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/receiver_address_layout"
                style="@style/hor_style_padding"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/t7"
                    style="@style/myStyle"
                    android:layout_centerVertical="true"
                    android:text="地        址:"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <TextView
                    android:id="@+id/receive_address"
                    style="@style/myStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="请选择收货人地址"
                    android:paddingLeft="20dp"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />

                <ImageView
                    android:id="@+id/arrow2"
                    style="@style/myStyle"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/xiadan_arrow" />

            </LinearLayout>

            <RelativeLayout
                style="@style/hor_style_padding"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/t8"
                    style="@style/myStyle"
                    android:layout_centerVertical="true"
                    android:text="@string/address_detail"
                    android:textColor="@android:color/background_dark"
                    android:textSize="@dimen/mid_text_size" />

                <EditText
                    android:id="@+id/receive_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/t8"
                    android:background="@null"
                    android:gravity="left|center"
                    android:hint="@string/addressSoOn"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/font_color_focused"
                    android:textColorHint="@color/font_color_hint"
                    android:textSize="@dimen/mid_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>