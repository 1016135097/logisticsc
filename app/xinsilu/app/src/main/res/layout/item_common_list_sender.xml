<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="8dp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/i_common_list_sender_sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true">

        <TextView
            android:id="@+id/i_common_list_sender_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="删除"
            android:textColor="@color/white" />

        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/i_common_list_sender_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/font_color_focused"
                    android:textSize="@dimen/common_text_size" />

                <TextView
                    android:id="@+id/i_common_list_sender_tv_hint_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="addr"
                    android:textColor="@color/font_color_normal"
                    android:textSize="@dimen/mid_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/i_common_list_sender_tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="phone"
                        android:textColor="@color/font_color_focused"
                        android:textSize="@dimen/common_text_size" />

                    <TextView
                        android:id="@+id/i_common_list_sender_tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:visibility="gone"
                        android:textColor="@color/font_color_hint"
                        android:textSize="@dimen/mid_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/i_common_list_sender_tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="addrs"
                    android:textColor="@color/font_color_normal"
                    android:textSize="@dimen/mid_text_size" />
            </LinearLayout>
        </carbon.widget.LinearLayout>
    </com.daimajia.swipe.SwipeLayout>

    <include layout="@layout/layout_line" />
</carbon.widget.LinearLayout>