<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.wrt.xinsilu.ui.activity.LoginActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <carbon.widget.ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:src="@mipmap/login_colsd" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:text="标题"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <carbon.widget.TextView
            android:id="@+id/title_enter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="right"
            android:padding="8dp"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size"
            app:carbon_rippleColor="@color/ripple" />

    </FrameLayout>
    <include layout="@layout/layout_line"/>

    <View
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:text="账号"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/mid_text_size" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:gravity="bottom|left"
            android:hint="@string/input_num"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="11"
            android:padding="8dp"
            android:textSize="@dimen/mid_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|left"
            android:text="密码"
            android:textColor="@android:color/background_dark"
            android:textSize="@dimen/mid_text_size" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:gravity="bottom|left"
            android:hint="@string/input_pwd"
            android:singleLine="true"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textSize="@dimen/mid_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/background" />

    <LinearLayout
        style="@style/hor_style"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >

        <carbon.widget.TextView
            android:id="@+id/login_button"
            style="@style/hor_style"
            android:background="@color/commit_background"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/login"
            android:textColor="@color/commit_color"
            android:textSize="@dimen/mid_text_size"
            app:carbon_cornerRadius="@dimen/btn_radius"
            app:carbon_rippleColor="@color/basic_color" />
    </LinearLayout>

    <LinearLayout
        style="@style/BasicParamNoMargin_v"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/regest_fast"
            style="@style/BasicParamNoMargin_h"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="快速注册"
            android:textSize="@dimen/mid_text_size" />

        <TextView
            android:id="@+id/forget_password"
            style="@style/BasicParamNoMargin_h"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="忘记密码？"
            android:textSize="@dimen/mid_text_size" />
    </LinearLayout>

    <View
        style="@style/BasicParamNoMargin_v"
        android:layout_weight="2" />

</LinearLayout>
