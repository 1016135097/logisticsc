                <!--app:ptr_duration_to_close_header="500"-->
                <!--app:ptr_keep_header_when_refresh="true"-->
                <!--app:ptr_pull_to_fresh="false"-->
                <!--app:ptr_ratio_of_header_height_to_refresh="1"-->
                <!--app:ptr_resistance="1.5">-->

                <!--<com.chanven.lib.cptr.PtrClassicDefaultHeader-->
                <!--android:id="@+id/fgm_pullrefreshheaderview"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->


                <com.xsl.lerist.llibrarys.widget.LRecyclerView
                    android:id="@+id/fgm_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
            </com.liaoinstan.springview.widget.SpringView>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/fgm_floor_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
    <!--<xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller-->
    <!--android:id="@+id/fgm_recyclerview_fast_scroller"-->
