<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/l_cost_time_filter_tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="选择时间"
            android:lines="1"
            android:padding="8dp"
            android:textColor="@color/colorAccent2"
            android:textColorHint="@color/font_color_hint"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="至"
            android:textColor="@color/font_color_focused"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/l_cost_time_filter_tv_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="选择时间"
            android:lines="1"
            android:padding="8dp"
            android:textColor="@color/colorAccent2"
            android:textColorHint="@color/font_color_hint"
            android:textSize="14sp" />

        <carbon.widget.TextView
            android:id="@+id/l_cost_time_filter_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@color/colorAccent2"
            android:clickable="true"
            android:paddingBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:text="筛选"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:carbon_cornerRadius="@dimen/radius_corner"
            app:carbon_rippleColor="@color/ripple" />
    </LinearLayout>

    <include layout="@layout/layout_line" />
</LinearLayout>