<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.xsl.distributor.ws.ui.activity.MyAccountActivity">

    <include layout="@layout/layout_title_with_back" />

    <include layout="@layout/layout_line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/account_inform_pic" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_name"
                style="@style/basic_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/account_inform_name"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/address"
                style="@style/basic_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/account_inform_addre"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/time"
                style="@style/basic_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/account_inform_time"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/mid_text_size" />

            <TextView
                android:id="@+id/bind_phone_number"
                style="@style/basic_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableLeft="@mipmap/account_inform_number"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/mid_text_size" />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>
