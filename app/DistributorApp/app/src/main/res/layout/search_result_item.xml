<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            style="@style/myStyle"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:text="运单号:"/>

        <TextView
            android:id="@+id/search_order_num"
            style="@style/myStyle"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"/>
    </LinearLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            style="@style/myStyle"
            android:layout_centerVertical="true"
            android:src="@mipmap/search_wangdian"/>
        <TextView
            android:id="@+id/text"
            style="@style/myStyle"
            android:layout_toRightOf="@id/img"
            android:textSize="@dimen/mid_text_size"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:text="出发网点:"/>

        <TextView
            android:id="@+id/search_start_line"
            style="@style/myStyle"
            android:layout_toRightOf="@id/text"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/search_end_line"
            style="@style/myStyle"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"/>
        <TextView

            style="@style/myStyle"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/search_end_line"
            android:text="到达网点:"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:paddingTop="0dp"
        android:layout_height="wrap_content">
        <ImageView
            style="@style/myStyle"
            android:layout_centerVertical="true"
            android:src="@mipmap/search_mudi"/>
        <TextView
            style="@style/myStyle"
            android:layout_toRightOf="@id/img"
            android:textSize="@dimen/mid_text_size"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:text="目的地:"/>
        <TextView
            android:id="@+id/search_final_palce"
            style="@style/myStyle"
            android:layout_toRightOf="@id/text"
            android:textSize="@dimen/mid_text_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    style="@style/myStyle"
                    android:src="@mipmap/search_phone"/>
                <TextView
                    style="@style/myStyle"
                    android:textSize="@dimen/mid_text_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="发货电话:"/>
                <TextView
                    android:id="@+id/send_number"
                    style="@style/myStyle"
                    android:textSize="@dimen/mid_text_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">
                <ImageView
                    style="@style/myStyle"
                    android:visibility="invisible"
                    android:src="@mipmap/search_phone"/>
                <TextView

                    style="@style/myStyle"
                    android:textSize="@dimen/mid_text_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:text="收货电话:"/>
                <TextView
                    android:id="@+id/receive_number"
                    style="@style/myStyle"
                    android:textSize="@dimen/mid_text_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <carbon.widget.TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/mid_text_size"
                android:background="@drawable/background_shap_stroke_textview"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/search_line"/>
</LinearLayout>
</LinearLayout>